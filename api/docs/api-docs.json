  "paths": {
    "/report": {
      "get": {
        "summary": "Melihat semua laporan yang masuk",
        "tags": [
          "Report"
        ],
        "responses": {
          "200": {
            "description": "Daftar semua laporan berhasil diambil"
          },
          "500": {
            "description": "Terjadi kesalahan saat mengambil laporan"
          }
        }
      },
      "post": {
        "summary": "Membuat laporan baru",
        "tags": [
          "Report"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Jalan berlubang di depan kantor"
                  },
                  "description": {
                    "type": "string",
                    "example": "Ada lubang besar di jalan yang dapat menyebabkan kecelakaan."
                  },
                  "location": {
                    "type": "string",
                    "example": "Jl. Merdeka No. 123"
                  },
                  "userId": {
                    "type": "string",
                    "example": "user123"
                  },
                  "status": {
                    "type": "string",
                    "example": "PENDING",
                    "enum": [
                      "PENDING",
                      "IN_PROGRESS",
                      "RESOLVED"
                    ]
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "title",
                  "description",
                  "location",
                  "userId"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Laporan berhasil dibuat"
          },
          "500": {
            "description": "Terjadi kesalahan saat membuat laporan"
          }
        }
      }
    },
    "/report/:id": {
      "get": {
        "summary": "Melihat laporan berdasarkan ID laporan",
        "tags": [
          "Report"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Laporan ditemukan"
          },
          "404": {
            "description": "Laporan tidak ditemukan"
          }
        }
      },
      "put": {
        "summary": "Memperbarui laporan berdasarkan ID laporan",
        "tags": [
          "Report"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Update judul laporan"
                  },
                  "description": {
                    "type": "string",
                    "example": "Update deskripsi"
                  },
                  "location": {
                    "type": "string",
                    "example": "Update lokasi"
                  },
                  "status": {
                    "type": "string",
                    "example": "IN_PROGRESS",
                    "enum": [
                      "PENDING",
                      "IN_PROGRESS",
                      "RESOLVED"
                    ]
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Laporan berhasil diperbarui"
          },
          "400": {
            "description": "Permintaan tidak valid"
          },
          "500": {
            "description": "Terjadi kesalahan saat memperbarui laporan"
          }
        }
      },
      "delete": {
        "summary": "Menghapus laporan berdasarkan ID laporan",
        "tags": [
          "Report"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Laporan berhasil dihapus"
          },
          "500": {
            "description": "Terjadi kesalahan saat menghapus laporan"
          }
        }
      }
    },
