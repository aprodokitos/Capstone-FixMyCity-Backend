    "/auth/register": {
      "post": {
        "summary": "Registrasi pengguna baru",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_name": {
                    "type": "string",
                    "example": "agus"
                  },
                  "user_birthday": {
                    "type": "string",
                    "format": "date",
                    "example": "1990-01-01"
                  },
                  "user_email": {
                    "type": "string",
                    "format": "email",
                    "example": "agus@mail.com"
                  },
                  "user_password": {
                    "type": "string",
                    "example": "secret123"
                  },
                  "isLoginAfterRegister": {
                    "type": "boolean",
                    "example": true
                  }
                },
                "required": [
                  "user_name",
                  "user_email",
                  "user_password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Berhasil mendaftarkan pengguna baru",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Successfully registered and logged in",
                  "data": {
                    "user_name": "agus",
                    "user_email": "agus@mail.com"
                  },
                  "token": "jwt.token.here"
                }
              }
            }
          },
          "400": {
            "description": "Input data tidak lengkap atau email sudah terdaftar",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Email sudah ada. Masuk atau gunakan email lain untuk mendaftar"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login pengguna",
        "tags": [
