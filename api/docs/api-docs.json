{
    "openapi": "3.0.3",
    "info": {
        "title": "FixMyCity Docs",
        "version": "1.0",
        "description": "API ini digunakan untuk website FixMyCity yang dikembangkan oleh Kelompok 9 Capstone Project."
    },
    "servers": [
        {
        "url": "http://localhost:3000",
        "description": ""
        },
        {
          "url": "https://backend-fixmycity.vercel.app"
        }
    ],
    "paths": {
    "/report": {
      "get": {
        "summary": "Melihat semua laporan yang masuk",
        "tags": ["Report"],
        "responses": {
          "500": {
            "description": "Error message"
          }
        }
      },
      "post": {
        "summary": "Membuat laporan",
        "tags": ["Report"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "DB create selesai, laporan disimpan dengan ID:"
          },
          "500" : {
            "description": "Terjadi kesalahan saat membuat laporan."
          }
        }
      }
    },
    "/report/:id": {
      "get": {
        "summary": "Melihat laporan berdasarkan ID user",
        "tags": ["Report"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Laporan tidak ditemukan"
          }
        }
      },
      "put": {
        "summary": "Memperbarui/mengubah laporan berdasarkan ID user",
        "tags": ["Report"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated"
          },
          "500": {
            "description": "Gagal mengupload gambar baru."
          }
        }
      },
      "delete": {
        "summary": "Menghapus laporan",
        "tags": ["Report"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted"
          },
          "500":{
            "description": "Terjadi kesalahan saat menghapus laporan."
          }
        }
      }
    },
    "/report/user/:userId": {
      "get": {
        "summary": "Melihat semua laporan berdasarkan ID user (dapat dilihat di dashboard)",
        "tags": ["Report"],
        "parameters": [
           {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Daftar laporan user ditemukan"
        }
      }
    }
  },
    "/comment": {
      "get": {
        "summary": "Melihat semua komentar yang ada",
        "tags": ["Comment"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "post": {
        "summary": "Membuat sebuah komentar",
        "tags": ["Comment"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Comment created"
          }
        }
      }
    },
    "/comment/:id": {
      "get": {
        "summary": "Melihat sebuah komentar berdasarkan ID user",
        "tags": ["Comment"]
      },
      "put": {
        "summary": "Memperbarui/mengubah komentar berdasarkan ID user",
        "tags": ["Comment"]
      },
      "delete": {
        "summary": "Menghapus Komentar",
        "tags": ["Comment"]
      }
    },
    "/user/login": {
      "post": {
        "summary": "User login",
        "tags": ["Auth"]
      }
    },
    "/user/logout": {
      "post": {
        "summary": "User logout",
        "tags": ["Auth"]
      }
    },
    "/user/new": {
      "post": {
        "summary": "Mendaftarkan/membuat akun baru",
        "tags": ["User"]
      }
    },
    "/user/all": {
      "get": {
        "summary": "Melihat daftar semua akun yang ada",
        "tags": ["User"]
      }
    },
    "/user/:id": {
      "get": {
        "summary": "Melihat akun yang ada berdasarkan ID user",
        "tags": ["User"]
      },
      "put": {
        "summary": "Memperbarui/mengubah akun berdasarkan ID user",
        "tags": ["User"]
      },
      "delete": {
        "summary": "Menghapus akun yang ada",
        "tags": ["User"]
      }
    },
    "/search/title": {
      "get": {
        "summary": "Mencari berdasarkan judul",
        "tags": ["Search"]
      }
    },
    "/search/location": {
      "get": {
        "summary": "Mencari berdasarkan lokasi",
        "tags": ["Search"]
      }
    },
    "/search/status": {
      "get": {
        "summary": "Mencari berdasarkan status",
        "tags": ["Search"]
      }
    },
    "/search/user": {
      "get": {
        "summary": "Mencari berdasarkan akun",
        "tags": ["Search"]
      }
    }
  },
  "tags": [
    { "name": "Report" },
    { "name": "Comment" },
    { "name": "User" },
    { "name": "Auth" },
    { "name": "Search" }
  ]
}